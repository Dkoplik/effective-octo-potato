    background-image: linear-gradient(top, #6eb6de, #4a77d4);
    border: 1px solid #3762bc;
    color: white;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.4);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  .btn-primary:hover, .btn-primary:active {
    background-color: #4a77d4;
  }

  .alert {
    color: #721c24;
    background-color: #f8d7da;
    border-color: #f5c6cb;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 10px;
    font-size: 14px;
  }

  .password-field {
    position: relative;
  }

  .password-help {
    position: absolute;
    right: -25px;  /* Сдвигаем значок вправо */
    top: 50%;      /* Размещаем на уровне поля ввода */
    transform: translateY(-50%);  /* Центрируем по вертикали */
    cursor: pointer;
    font-size: 16px;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.3);
    padding: 2px 5px;
    border-radius: 50%;
    text-align: center;
  }

  .password-help:hover {
    background-color: rgba(0, 0, 0, 0.5);
  }

  /* Стиль всплывающей подсказки */
  .password-help[data-tooltip]:hover::after {
    content: attr(data-tooltip);
    position: absolute;
    left: 0;
    top: 30px;
    background-color: rgba(0, 0, 0, 0.7);
    color: #fff;
    padding: 10px;
    border-radius: 5px;
    font-size: 12px;
    width: 200px;
    text-align: left;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    z-index: 10;
  }
</style>
