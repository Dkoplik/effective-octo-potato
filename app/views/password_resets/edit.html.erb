<div class="login">
  <h1>Сброс пароля</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: password_reset_path(token: params[:token]), method: :patch, local: true do |form| %>
    <%= form.password_field :old_password, placeholder: "Старый пароль", required: true %>
    
    <div class="password-field">
      <%= form.password_field :new_password, placeholder: "Новый пароль", required: true %>
      <span class="password-help" data-tooltip="Количество символов 8 - 128. Как минимум одна заглавная и одна строчная буква. Как минимум одна цифра. Без пробелов. Другие допустимые символы: ~ ! ? @ # $ % ^ & * _ - + ( ) [ ] { } > < / \\ | \" ' . , : ;">?</span>
    </div>

    <%= form.submit "Обновить", class: "btn btn-primary btn-block btn-large" %>
  <% end %>
</div>

<style>
